{
  "apps": [
    {
      "name": "championfootballer-api",
      "script": "./dist/index.js",
      "instances": 1,
      "exec_mode": "cluster",
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "restart_delay": 4000,
      "kill_timeout": 5000,
      "listen_timeout": 8000
    }
  ]
}
